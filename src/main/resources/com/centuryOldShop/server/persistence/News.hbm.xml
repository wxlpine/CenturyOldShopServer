<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.centuryOldShop.server.persistence" auto-import="true">
    <class name="News" mutable="true" dynamic-update="false" dynamic-insert="false" select-before-update="false"
           lazy="true" abstract="false">
        <id name="newsId">
            <column name="newsId" sql-type="int" not-null="true"/>
        </id>
        <property name="title" insert="true" update="true" lazy="false" optimistic-lock="true">
            <column name="title" sql-type="nvarchar(255)" not-null="true" length="255"/>
        </property>
        <property name="contentUrl" insert="true" update="true" lazy="false" optimistic-lock="true">
            <column name="contentUrl" sql-type="nvarchar(4000)" not-null="true" length="4000"/>
        </property>
        <property name="publishTime" insert="true" update="true" lazy="false" optimistic-lock="true">
            <column name="publishTime" sql-type="datetime2(0)" not-null="true"/>
        </property>
        <property name="readCount" insert="true" update="true" lazy="false" optimistic-lock="true">
            <column name="readCount" sql-type="int" not-null="true"/>
        </property>
        <property name="spotScene" insert="true" update="true" lazy="false" optimistic-lock="true">
            <column name="spotScene" sql-type="nvarchar(1000)" not-null="true" length="1000"/>
        </property>
        <many-to-one name="shop" class="com.centuryOldShop.server.persistence.Shop" outer-join="false" update="true"
                     insert="true">
            <column name="shopId" sql-type="int" not-null="true" length="0"/>
        </many-to-one>
    </class>
</hibernate-mapping>